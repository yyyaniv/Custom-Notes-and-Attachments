{
    "tabWidth": 4,
    "trailingComma": "none",
    "singleQuote": true,
    "printWidth": 120,
    "plugins": ["prettier-plugin-apex"],
    "overrides": [
        { "files": "**/lwc/**/*.html", "options": { "parser": "lwc" } },
        {
            "files": "*.{cmp,page,component}",
            "options": { "parser": "html", "printWidth": 160 }
        },
        { "files": "*.{trigger,cls}", "options": { "parser": "apex", "apexInsertFinalNewline": false } }
    ]
}
